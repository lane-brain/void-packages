# Template file for 'ananicy'
pkgname=ananicy
version=2.2.0+git
revision=$(date +%Y%m%d)
wrksrc=${pkgname}-${version}
build_style=gnu-makefile
hostmakedepends="git util-linux"
makedepends=""
depends="python3"
short_desc="A shell daemon created to manage processes' IO and CPU priorities, with community-driven set of rules for popular applications."
maintainer="lane-brain <lane@mailbox.org>"
license="GPL-3.0-or-later"
homepage="https://github.com/Nefelim4ag/Ananicy"

do_fetch() {
    git clone --depth 1 ${homepage} ${wrksrc}
}

do_install() {
    cd ${wrksrc}
    make PREFIX=${DESTDIR} install 
}

post_install() {
    rm -r ${DESTDIR}/lib
    vsv ananicy
}


