# Template file for 'ananicy'
pkgname=ananicy
version=2.2.0+git.$(date +%Y%m%d)
revision=1
wrksrc=${pkgname}-{$version}
build_style=gnu-makefile
hostmakedepends=" git"
makedepends=""
depends="python"
short_desc=""
maintainer="lane-brain <lane@mailbox.org>"
license="GPL-3.0-or-later"
homepage="https://github.com/Nefelim4ag/Ananicy"

do_fetch() {
    git clone --depth 1 ${homepage} ${wrksrc}
}

do_install() {
    cd ${wrksrc}
    make install
    vsv
}

post_install() {
    rm lib/systemd/system/ananicy.service
}


