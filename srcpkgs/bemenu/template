# Template file for 'bemenu'
pkgname=bemenu
_commit=e74224a40633e6a03d19f0b0844cca08792e6a31
version=20210205
revision=1
wrksrc="${pkgname}-${_commit}"
build_style=gnu-makefile
make_build_args="PREFIX=/usr"
hostmakedepends="pkg-config wayland-devel"
makedepends="ncurses-devel cairo-devel pango-devel
 libxkbcommon-devel libXinerama-devel wayland-devel
 wayland-protocols"
short_desc="Dynamic menu library and client program inspired by dmenu"
maintainer="Issam Maghni <me@concati.me>"
license="GPL-3.0-or-later, LGPL-3.0-or-later"
homepage="https://github.com/Cloudef/bemenu"
distfiles="https://github.com/Cloudef/bemenu/archive/${_commit}.tar.gz"
checksum=e82310e512b230b1d304f720db3f77ebe159850bdb8450d192929a80c6a4d3d0

bemenu-devel_package() {
	depends="bemenu-${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
