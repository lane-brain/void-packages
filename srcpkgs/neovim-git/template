# Template file for 'neovim'
pkgname=neovim-git
version=$(date +%Y%m%d)
revision=1
build_style=cmake
build_helper="qemu"
hostmakedepends="pkg-config gettext gperf LuaJIT lua51-lpeg lua51-mpack git"
makedepends="libtree-sitter libtermkey-devel libuv-devel libvterm-devel msgpack-devel LuaJIT-devel
 libluv-devel"
depends="libvterm>=0.1.0"
short_desc="Fork of Vim aiming to improve user experience, plugins and GUIs"
maintainer="Steve Prybylski <sa.prybylx@gmail.com>"
license="Apache-2.0, custom:Vim"
homepage="https://neovim.io"
provides="neovim>=0"
replaces="neovim>=0"


alternatives="
 vi:vi:/usr/bin/nvim
 vi:vi.1:/usr/share/man/man1/nvim.1
 vi:view:/usr/bin/nvim
 vi:view.1:/usr/share/man/man1/nvim.1
 vim:vim:/usr/bin/nvim
 vim:vim.1:/usr/share/man/man1/nvim.1"

do_fetch(){
    git clone --depth 1 https://github.com/neovim/neovim $wrksrc 
}

pre_configure() {
	vsed -i runtime/CMakeLists.txt \
		-e "s|\".*/bin/nvim|\${CMAKE_CROSSCOMPILING_EMULATOR} &|g"
}

post_install() {
	vlicense LICENSE
}
