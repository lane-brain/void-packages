revision=1
wrksrc=${pkgname}
build_style=meson
configure_args="-Dwerror=false"
hostmakedepends="pkg-config scdoc wayland-devel"
makedepends="fcft-devel libxkbcommon-devel ncurses-devel tllist wayland-devel
 wayland-protocols"
depends="${pkgname}-terminfo>=${version}_${revision}"
