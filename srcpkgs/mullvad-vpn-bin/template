# Template file for 'bitwig-studio'
pkgname=mullvad-vpn-bin
version=2020.7
revision=1
archs="x86_64"
depends="atk cairo gdk-pixbuf glib gtk+3 pango" # libappindicator is required for gnome menubar icon
short_desc="Offical Mullvad VPN client (binary package)"
maintainer="lane-brain <lane@mailbox.org>"
license="GPL-3.0-or-later"
homepage="https://mullvad.net"
_file="MullvadVPN-${version}_amd64.deb"
distfiles="https://mullvad.net/media/app/${_file}"
checksum=3193add6573ef2edc9e84898adad65e14f2fcc060df89c7ca924236cc3f7791f
nostrip=yes
restricted=no

do_extract() {
	mkdir -p ${DESTDIR}
	ar x ${XBPS_SRCDISTDIR}/mullvad-vpn-bin-${version}/${_file}
}

do_install() {
	bsdtar -xf data.tar.xz -C ${DESTDIR}
    cd ${DESTDIR}
    mv usr/local/share/* usr/share/
    rm -r usr/local
}
