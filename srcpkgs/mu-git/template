# Template file for 'mu-git'
pkgname=mu-git
version=$(date +%Y%m%d)
revision=1
build_style=gnu-configure
hostmakedepends="automake libtool pkg-config texinfo glib-devel"
makedepends="xapian-core-devel gmime3-devel libuuid-devel git"
checkdepends="tzdata"
short_desc="Emacs-based tool for dealing with e-mail stored in the Maildir-format"
maintainer="Benjamin Slade <slade@jnanam.net>"
license="GPL-3.0-or-later"
homepage="https://www.djcbsoftware.nl/code/mu/"
replaces="mu>=0"

do_fetch() {
    git clone https://github.com/djcb/mu/ ${wrksrc}
}

if [ ! "$CROSS_BUILD" ]; then
	hostmakedepends+=" emacs"
else
	configure_args+=" --disable-mu4e"
fi

pre_configure() {
	sed -i 's,-I${prefix}/include,,' contrib/Makefile.am
	autoreconf -fi
}

if [ ! "$CROSS_BUILD" ]; then
	mu4e-git_package() {
		archs=noarch
		short_desc+=" - Emacs frontend"
		depends="${sourcepkg}-${version}_${revision} emacs"
		replaces="mu4e>=0"
        pkg_install() {
			vmove usr/share/emacs
			vmove usr/share/info
			vmove usr/share/doc/mu/mu4e*
		}
	}
fi
