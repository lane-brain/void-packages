# Template file for 'libtree-sitter'
pkgname=libtree-sitter
version=0.17.3
revision=1
build_style=gnu-makefile
configure_args=""
makedepends="git"
short_desc="Tree-sitter is a parser generator tool and an incremental parsing library."
maintainer="Lane Biocini <lane@mailbox.org>"
license="BSD-3-Clause"
homepage="https://github.com/tree-sitter/tree-sitter"

do_fetch() {
    git clone $homepage $wrksrc
    cd $wrksrc
    git checkout ${version}
}
