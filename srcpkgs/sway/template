# Template file for 'sway-git'
# pinned to git master
pkgname=sway
_commit=1afedcb94c0517b5434e2220e63b997cf01427bd
version=20210225
revision=1
wrksrc=${pkgname}-${_commit}
build_style=meson
conf_files="/etc/sway/config"
hostmakedepends="pkg-config wayland-devel scdoc wlroots-devel pcre-devel 
wayland-protocols json-c-devel libxkbcommon-devel cairo-devel pango-devel 
libevdev-devel gdk-pixbuf-devel libinput-devel xcb-util-renderutil-devel"
makedepends="wlroots xcb-util-renderutil wlroots-devel pcre-devel json-c-devel pango-devel cairo-devel
 gdk-pixbuf-devel xcb-util-renderutil-devel"
depends="swaybg xorg-server-xwayland xcb-util-renderutil wlroots"
short_desc="Tiling Wayland compositor compatible with i3"
maintainer="Olaf Mersmann <olafm@p-value.net>"
license="MIT"
homepage="https://github.com/swaywm/sway"
distfiles="${homepage}/archive/${_commit}.tar.gz"
checksum=38255818db610dd8488660da20c66420ec8665ec764bddb50b5cd53d03854ab1

post_patch() {
	vsed -e 's/werror=true/werror=false/g' -i meson.build
}

post_install() {
	vlicense LICENSE
	vbin contrib/grimshot
	vman contrib/grimshot.1
}

grimshot_package() {
	short_desc="Helper for screenshots within sway"
	depends="grim slurp sway wl-clipboard jq libnotify"
	pkg_install() {
		vmove usr/bin/grimshot
		vmove usr/share/man/man1/grimshot.1
	}
}
