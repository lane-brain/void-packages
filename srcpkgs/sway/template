# Template file for 'sway'
# pinned to git master
pkgname=sway
_commit=8b7008a2962ac44510531c066adef73e01e653eb
_commitdate=20210130
_repourl="https://github.com/swaywm/sway"
version=1.5.1+${_commitdate}
revision=1
wrksrc=${pkgname}-${_commit}
build_style=meson
conf_files="/etc/sway/config"
hostmakedepends="pkg-config wayland-devel scdoc wlroots-devel pcre-devel 
wayland-protocols json-c-devel libxkbcommon-devel cairo-devel pango-devel 
libevdev-devel gdk-pixbuf-devel libinput-devel"
makedepends="wlroots-devel pcre-devel json-c-devel pango-devel cairo-devel
 gdk-pixbuf-devel"
depends="swaybg xorg-server-xwayland"
short_desc="Tiling Wayland compositor compatible with i3"
maintainer="Olaf Mersmann <olafm@p-value.net>"
license="MIT"
homepage="https://swaywm.org"
distfiles="${_repourl}/archive/${_commit}.tar.gz"
checksum=6d11fb4bde5978f76c7fe1ff1952eee99db95fc6ebc6bf2731481d67724f20c9

post_patch() {
	vsed -e 's/werror=true/werror=false/g' -i meson.build
}

post_install() {
	vlicense LICENSE
	vbin contrib/grimshot
	vman contrib/grimshot.1
}

grimshot_package() {
	short_desc="Helper for screenshots within sway"
	depends="grim slurp sway wl-clipboard jq libnotify"
	pkg_install() {
		vmove usr/bin/grimshot
		vmove usr/share/man/man1/grimshot.1
	}
}
